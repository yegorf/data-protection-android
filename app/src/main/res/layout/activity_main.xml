<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_header"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_marginBottom="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_choose_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_file_label"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn_demo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/demo_file" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_chosen_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="file path" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_method_label"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>

        <RadioGroup
            android:id="@+id/rg_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <RadioButton
                android:id="@+id/rb_haffman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/haffman" />

            <RadioButton
                android:id="@+id/rb_lzw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lzw"/>


            <RadioButton
                android:id="@+id/rb_aes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aes"/>


            <RadioButton
                android:id="@+id/rb_rsa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rsa"/>

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_action_label"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>

        <RadioGroup
            android:id="@+id/rg_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_encrypt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/encrypt" />

            <RadioButton
                android:id="@+id/rb_decrypt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/decrypt" />

        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/start_btn_text"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

</LinearLayout>